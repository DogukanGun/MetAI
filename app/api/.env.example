# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# OpenAI Configuration (for AI Agent)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_BASE_URL=https://api.openai.com/v1

# Local LLM Configuration (alternative to OpenAI)
LOCAL_LLM_API_KEY=ollama
LOCAL_LLM_MODEL=llama3
LOCAL_LLM_BASE_URL=http://localhost:11434/v1

# AI Agent Configuration
AGENT_TEMPERATURE=0.7
AGENT_MAX_TOKENS=2000
AGENT_KB_TOP_K=5
AGENT_KB_SIMILARITY_THRESHOLD=0.5

# MongoDB Configuration
MONGODB_CONNECTION_STRING=mongodb://localhost:27017
MONGODB_DATABASE=emotion_analysis_db
MONGODB_CHAT_COLLECTION=chat_sessions

# MongoDB Atlas (Cloud) Example
# MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/
# MONGODB_DATABASE=emotion_analysis_db

# Knowledge Base Configuration
KB_CHUNK_SIZE=500
KB_CHUNK_OVERLAP=50
KB_TOP_K_RESULTS=10

# Security
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# File Upload Limits
MAX_UPLOAD_SIZE_MB=100
ALLOWED_VIDEO_EXTENSIONS=mp4,avi,mov,webm
ALLOWED_DOCUMENT_EXTENSIONS=pdf,txt,docx,doc

# Processing Configuration
MAX_PROCESSING_TIME_MINUTES=10
PARALLEL_MODEL_PROCESSING=True